= form_for @job, class: "form" do |f|
  - if @job.errors.any?
    / Display errors
    %p There were errors!
    %ul
      - @job.errors.full_messages.each do |error|
        %li= error

  .form-group
    = f.label :title
    = f.text_field :title, class: "form-control"

  .form-group
    = f.label :description
    = f.text_area :description, rows: 10, class: "form-control"

  .form-group
    = f.label :start_date
    = f.date_field :start_date, class: "form-control"

  .form-group
    = f.label :end_date
    = f.date_field :end_date, class: "form-control"

  %button.btn.btn-primary Post Job
